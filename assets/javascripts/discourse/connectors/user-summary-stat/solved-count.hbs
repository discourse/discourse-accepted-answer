  <li class="user-summary-stat-outlet solved-count linked-stat">
    <LinkTo @route="userActivity.solved">
      <UserStat
        @value={{@outletArgs.model.solved_count}}
        @label="solved.solution_summary"
        @icon="square-check"
      />
    </LinkTo>
  </li>
{{/if}}